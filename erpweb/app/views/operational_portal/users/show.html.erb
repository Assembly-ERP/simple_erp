<!-- app/views/operational_portal/users/show.html.erb -->
<div class="container">
  <h1>User Details</h1>
  <p><strong>Name:</strong> <%= @user.name %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Phone:</strong> <%= format_phone_number(@user.phone) %></p>
  <p><strong>Role:</strong> <%= @user.role %></p>
  <p><strong>Customer:</strong> <%= @user.customer.name %></p>

  <%= link_to 'Edit', edit_operational_portal_user_path(@user), class: "btn btn-primary" %>
  <%= link_to 'Back', operational_portal_users_path, class: 'btn btn-secondary' %>
</div>
