/ app/views/operational_portal/users/show.html.erb
.container
  %h1 User Details
  %p
    %strong Name:
    = @user.name
  %p
    %strong Email:
    = @user.email
  %p
    %strong Phone:
    = format_phone_number(@user.phone)
  %p
    %strong Role:
    = @user.role
  %p
    %strong Customer:
    = @user.customer.name
  = link_to 'Edit', edit_operational_portal_user_path(@user), class: "btn btn-primary"
  = link_to 'Back', operational_portal_users_path, class: 'btn btn-secondary'
