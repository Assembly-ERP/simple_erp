<!-- app/views/operational_portal/customers/show.html.erb -->
<div class="container">
  <h1>Customer Details</h1>
  <p><strong>Name:</strong> <%= @customer.name %></p>
  <p><strong>Phone:</strong> <%= format_phone_number(@customer.phone) %></p>
  <p><strong>Street:</strong> <%= @customer.street %></p>
  <p><strong>City:</strong> <%= @customer.city %></p>
  <p><strong>State:</strong> <%= @customer.state %></p>
  <p><strong>Postal Code:</strong> <%= @customer.postal_code %></p>
  

  <%= link_to 'Edit', edit_operational_portal_customer_path(@customer), class: "btn" %>
  <%= link_to 'Back', operational_portal_customers_path, class: "btn" %>
</div>
