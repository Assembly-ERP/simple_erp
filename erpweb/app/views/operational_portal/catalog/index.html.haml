.py-5.flex.flex-col.gap-5
  .grid.gap-3
    .flex.justify-between.gap-2.items-center
      %h1.font-semibold.text-2xl Orders
      .actions
        = link_to new_operational_portal_product_path, class: "flex gap-3 items-center btn-md bg-[color:var(--primary)] text-[color:var(--primary-text)]" do
          = icon("fa-solid", "plus")
          New Product
    .table-primary
      %table
        %thead
          %tr
            %th Name
            %th Price
            %th Description
        %tbody
          - @products.each do |product|
            %tr
              %td= link_to product.name, operational_portal_product_path(product)
              %td= number_to_currency(product.price, unit: "$", precision: 2)
              %td= product.description
  .grid.gap-3
    .flex.justify-between.gap-2.items-center
      %h1.font-semibold.text-2xl Parts
      .actions
        = link_to new_operational_portal_part_path, class: "flex gap-3 items-center btn-md bg-[color:var(--primary)] text-[color:var(--primary-text)]" do
          = icon("fa-solid", "plus")
          New Part
    .table-primary
      %table
        %thead
          %tr
            %th Name
            %th Price
            %th In Stock
            %th Description
            %th Weight
        %tbody
          - @parts.each do |part|
            %tr
              %td= link_to part.name, operational_portal_part_path(part)
              %td= number_to_currency(part.price, unit: "$", precision: 2)
              %td
                - if part.inventory
                  = part.in_stock
              %td= part.description
              %td= part.weight
