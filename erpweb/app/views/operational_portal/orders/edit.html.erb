<!-- app/views/operational_portal/orders/edit.html.erb -->
<h1>Update <%= "Order ##{@order.id}" %></h1>

<%= form_with(model: @order, local: true, url: operational_portal_orders_path) do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :customer_id, "Customer" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name, prompt: "Select a Customer" %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Order.statuses.keys.map { |status| [status.titleize, status] } %>
  </div>

  <div class="field">
    <%= form.label :total_amount, "Total Amount" %>
    <%= form.number_field :total_amount, step: :any %>
  </div>

  <div class="actions">
    <%= form.submit "Update Order"%>
  </div>
<% end %>

<%= link_to 'Back', operational_portal_orders_path %>
