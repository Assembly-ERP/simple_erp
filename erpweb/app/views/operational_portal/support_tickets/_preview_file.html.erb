<!-- app/views/operational_portal/support_tickets/_preview_file.html.erb -->
<% if @file.image? %>
  <%= image_tag url_for(@file) %>
<% elsif @file.video? %>
  <video controls>
    <source src="<%= url_for(@file) %>" type="<%= @file.content_type %>">
    Your browser does not support the video tag.
  </video>
<% else %>
  <p><strong>File Name:</strong> <%= @file.filename %></p>
  <p><strong>File Type:</strong> <%= @file.content_type %></p>
  <%= link_to "Download", rails_blob_path(@file, disposition: "attachment") %>
<% end %>
