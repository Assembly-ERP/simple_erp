<!-- app/views/operational_portal/support_tickets/index.html.erb -->
<div class="container">
<h1>Support Tickets</h1>

<div class="actions">
<%= link_to 'New Support Ticket', new_operational_portal_support_ticket_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Ticket Title</th>
      <th>Customer Name</th>
      <th>Status</th>
      <th>Created Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @support_tickets.present? %>
      <% @support_tickets.each do |ticket| %>
        <tr class="order-row">
          <td><%= link_to ticket.title, operational_portal_support_ticket_path(ticket) %></td>
          <td><%= ticket.customer.name %></td>
          <td><%= ticket.status %></td>
          <td class="local-time" data-time="<%= ticket.created_at %>"><%= ticket.created_at %></td>
          <td>
          <%= link_to 'Edit', edit_operational_portal_support_ticket_path(ticket) %>
          <%= link_to 'Delete', operational_portal_support_ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">No Support Tickets found</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>