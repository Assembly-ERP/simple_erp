<!-- app/views/operational_portal/settings/index.html.erb -->
<div class="container">
  <h1>Settings</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Key</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @settings.each do |setting| %>
        <tr>
          <td><%= setting.key %></td>
          <td><%= number_to_currency(setting.value, unit: "$", precision: 2) %></td>
          <td><%= link_to 'Edit', edit_operational_portal_setting_path(setting) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
