<!-- app/views/operational_portal/settings/edit.html.erb -->
<div class="container">
  <h1>Edit <%= @setting.key %></h1>

  <%= form_with(model: @setting, url: operational_portal_setting_path, local: true) do |form| %>
    <% if @setting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>
        <ul>
          <% @setting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
       <%= form.label :key, "Price Per lbs $" %>
       <%= form.text_field :value, value: format('%.2f', @setting.value.to_f), step: :any %>
    </div>

    <div class="actions">
      <%= form.submit "Save Changes", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', operational_portal_settings_path, class: 'btn btn-secondary' %>
</div>
