<!-- app/views/webhooks/index.html.erb -->
<h1>Webhooks List</h1>
<table>
  <thead>
    <tr>
      <th>URL</th>
      <th>Customer</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @webhooks.each do |webhook| %>
      <tr>
        <td><%= webhook.url %></td>
        <td><%= webhook.customer.name %></td>
        <td>
          <%= link_to 'Show', webhook %>
          <%= link_to 'Edit', edit_webhook_path(webhook) %>
          <%= link_to 'Delete', webhook, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Webhook', new_webhook_path %>
