/ app/views/customer_portal/support_tickets/edit.html.erb
%h1 Edit Support Ticket
= form_with(model: @support_ticket, local: true, url: customer_portal_support_ticket_path(@support_ticket), method: :patch) do |form|
  - if @support_ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@support_ticket.errors.count, "error")
        prohibited this support ticket from being saved:
      %ul
        - @support_ticket.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :issue_description
    = form.text_area :issue_description
  .field
    = form.label :status
    = form.select :status, SupportTicket.statuses.keys.map { |status| [status.titleize, status] }
  .actions
    = form.submit "Update Support Ticket"
= link_to 'Back', customer_portal_support_tickets_path
