/ app/views/customer_portal/profiles/edit.html.erb
.container
  %h1 Edit Profile
  = form_with(model: @user, url: customer_portal_profile_path, local: true) do |form|
    - if @user.errors.any?
      #error_explanation
        %h2
          = pluralize(@user.errors.count, "error")
          prohibited this profile from being saved:
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message
    .field
      = form.label :email
      = form.email_field :email, autofocus: true
    .field
      = form.label :name
      = form.text_field :name
    .field
      = form.label :phone
      = form.telephone_field :phone
    .field
      = form.label :password
      = form.password_field :password, autocomplete: "new-password"
      - if @user.persisted?
        %em (leave blank if you don't want to change it)
    .field
      = form.label :password_confirmation
      = form.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = form.submit "Update Profile"
  = link_to 'Back', customer_portal_profile_path, class: "btn"
