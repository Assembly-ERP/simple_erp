- if @items.present?
  - @items.each do | item |
    = render "customer_portal/catalog/item", item: item
- else
  .grid.w-full.h-40.place-items-center
    .flex.flex-col.gap-1.items-center.text-gray-400
      = icon("fa-solid", "box-open", class: "text-5xl")
      %span
        No results

- if @pagy.next
  - if user_signed_in?
    .flex.w-full.justify-center.pt-2{id: "catalog-page-#{@pagy.next}"}
      = link_to "Show More", customer_portal_catalog_index_path(more: true, search: params[:search], filter_by: params[:filter_by], category: params[:category], page: @pagy.next), data: {turbo_stream: true}, class: "btn-sm bg-[color:var(--primary)] text-[color:var(--primary-text)]"
  - else
    .flex.w-full.justify-center.pt-2{id: "catalog-page-#{@pagy.next}"}
      = link_to "Show More", root_path(more: true, search: params[:search], filter_by: params[:filter_by], category: params[:category], page: @pagy.next), data: {turbo_stream: true}, class: "btn-sm bg-[color:var(--primary)] text-[color:var(--primary-text)]"
