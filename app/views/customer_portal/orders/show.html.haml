.py-5
  = turbo_frame_tag "order_show" do
    %h1 Order Details
    %p
      %strong Order ID:
      = @order.id
    %p
      %strong Status:
      = @order.order_status.name
    %p
      %strong Order Date:
      = @order.created_at
    %h2 Items
    %ul
      - @order.order_details.each do |item|
        %li
          %strong Item:
          = item.product ? item.product.name : item.part.name
          %strong Quantity:
          = item.quantity
