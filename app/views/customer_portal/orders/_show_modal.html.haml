%dialog{class: "xl:max-w-7xl w-full overflow-y-auto h-[80%]", "data-dialog-target": "dialog"}
  .flex.px-8.py-3.gap-4.justify-between.items-center.sticky.top-0.bg-white.z-10.border-b
    %h2.text-xl.font-semibold Order Details
    .relative{data: {controller: "dropdown"}}
      %button.px-4.py-1.text-gray-600.rounded-lg.border.border-gray-300.h-fit.flex.gap-2.items-center.bg-white.hover:bg-foreground.focus:outline-0{type: "button", data: {action: "dropdown#toggle click@window->dropdown#hide"}}
        = icon("fa-solid", "file", class: "text-sm")
        Export
      .hidden.transition.transform.origin-top-right.absolute.right-0.z-10{"data-dropdown-target" => "menu", "data-transition-enter-from" => "opacity-0 scale-95", "data-transition-enter-to" => "opacity-100 scale-100", "data-transition-leave-from" => "opacity-100 scale-100", "data-transition-leave-to" => "opacity-0 scale-95"}
        .border.rounded.shadow.bg-white.w-44.mt-2
          .divide.grid.text-gray-700
            = link_to quote_or_invoice_customer_portal_order_path(order), target: :_top, target: "_blank", rel: "noopener noreferrer", class: "px-3 py-2 hover:bg-gray-50 hover:text-[color:var(--primary)] flex items-center gap-2" do
              = icon("fa-solid", "download", class: "text-sm")
              Quote/Invoice
  .pt-4.pb-6.px-8{class: "w-full"}
    = turbo_frame_tag "order_show", src: customer_portal_order_path(order), loading: :lazy do
      .flex.items-center.justify-center.w-full{class: "h-full"}
        = icon("fa-solid", "spinner", class: "animate-spin text-4xl text-gray-400")
