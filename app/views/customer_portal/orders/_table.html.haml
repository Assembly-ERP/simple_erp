#order-list{data: {controller: "scrolltotop"}}
  .table
    .table-header-group
      .table-row
        .table-cell ID
        .table-cell Status
        .table-cell Total Amount
        .table-cell Created Date
    .table-row-group
      - if @orders.present?
        - @orders.each do |order|
          .table-row.cursor-pointer{id: dom_id(order)}
            .table-cell
              = order.formatted_id
            .table-cell
              = order.status
            .table-cell
              = number_to_currency(order.total_amount, unit: "$", precision: 2)
            .table-cell
              = order.created_at
      - else
        .table-row
          .table-cell No orders found
          .table-cell
          .table-cell
          .table-cell

  - if @pagy.pages > 1          
    .flex.gap-3.items-center.w-full.justify-between.px-4.py-3
      != pagy_nav(@pagy, link_extra: 'data-turbo-stream="true"')
      != pagy_info(@pagy)
