%tr{id: "search-part-#{part.id}", data: {controller: "products--part-item"}}
  %td.w-96.min-w-56.whitespace-nowrap.py-4{class: "text-[16px]", id: "search-part-form-#{part.id}"}
    = part.name
  %td.p-4.text-base.text-gray-500
    %span weight:
    = part.weight
  %td.p-4.text-base.text-gray-500
    stocks: 
    - if part.inventory
      = part.in_stock
    - else 
      Available
  %td.p-4.text-base.font-semibold.text-gray-900
    = number_to_currency(part.price, unit: "$", precision: 2)

  - quantity = (params[:product_id].present? && part.quantity.present?) ? part.quantity : 1

  %td.p-4.flex.justify-end
    #quantity-container
      #quantity.small
        = button_tag class: "decrement transition-colors duration-200", type: "button", data: {action: "products--part-item#decrement"} do
          = icon("fa-solid", "minus")
        = number_field_tag 'quantity', quantity, min: 1, id: dom_id(part, "search-part-qty"), class: "number-input transition-colors duration-200", data: {"products--part-item-target": "quantity", action: "input->products--part-item#quantityInput change->products--part-item#quantityChange"}
        = button_tag class: "increment transition-colors duration-200", type: "button", data: {action: "products--part-item#increment"} do
          = icon("fa-solid", "plus")
  %td.py-4.pr-4
    %button.ml-auto.block.text-white.rounded.px-4.text-sm{id: "search-part-btn-#{part.id}", "data-tooltip-placement" => "top", "data-tooltip-target" => "remove-tooltip", type: "button", class: "py-1.5 #{(params[:product_id].present? && part.product_id.present?) ? "bg-[color:var(--secondary)]" : "bg-[color:var(--primary)]"} disabled:bg-gray-400", data: {name: part.name, quantity: quantity, price: part.price, part_id: part.id, weight: part.weight, "item_id": params[:product_id].present? ? part.item_id : "", "products--part-item-target": "add", action: "products--nested-form#add"}}
      - if params[:product_id].present? && part.product_id.present?
        Update
      - else
        Add
