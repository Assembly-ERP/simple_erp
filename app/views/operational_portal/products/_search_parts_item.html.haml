%tr{data: {controller: "products--part-item"}}
  %td.w-96.min-w-56.whitespace-nowrap.py-4{class: "text-[16px]"}
    = part.name
  %td.p-4.text-base.text-gray-500
    stocks: 
    - if part.inventory
      = part.in_stock
    - else 
      Available
  %td.p-4.text-base.font-semibold.text-gray-900
    = number_to_currency(part.price, unit: "$", precision: 2)
  %td.p-4.flex.justify-end
    #quantity-container
      #quantity.small
        = button_tag class: "decrement transition-colors duration-200", type: "button", data: {action: "click->products--part-item#decrement"} do
          = icon("fa-solid", "minus")
        = number_field_tag 'quantity', 1, min: 1, id: dom_id(part, "search-part-qty"), class: "number-input transition-colors duration-200", data: {"products--part-item-target": "quantity", action: "input->products--part-item#quantityInput change->products--part-item#quantityChange"}
        = button_tag class: "increment transition-colors duration-200", type: "button", data: {action: "click->products--part-item#increment"} do
          = icon("fa-solid", "plus")
  %td.py-4
    %button.ml-auto.block.text-white.rounded.px-3.text-sm.py-1{"data-tooltip-placement" => "top", "data-tooltip-target" => "remove-tooltip", type: "button", class: "bg-[color:var(--primary)] disabled:bg-gray-400", disabled: true, data: {name: part.name, quantity: 1, price: part.price, "products--part-item-target": "add", action: "click->products--nested-form#add click->products--part-item#reset"}}
      = icon("fa-solid", "plus")
      Add
