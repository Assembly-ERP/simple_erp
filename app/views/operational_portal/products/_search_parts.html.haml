.grid.gap-3.mt-2.bg-white.p-4.rounded.border.border-gray-300{data: {controller: "products--search-parts"}}
  .flex.gap-4.items-center
    .relative{class: "w-[40%]"}
      %input.py-2.w-full.rounded-xl.border.h-fit.pr-4.pl-11.border-gray-300.focus:outline-0.focus:ring-4.focus:ring-gray-200{placeholder: "Search parts"}
      = icon("fa-solid", "magnifying-glass", class: "text-gray-500 text-lg absolute top-3 left-4")
    %button#dropdownFilterButton.py-2.flex.gap-2.items-center.justify-center.px-4.font-medium.text-gray-900.focus:outline-none.bg-white.rounded-xl.border.border-gray-300.hover:bg-gray-100.focus:z-10.focus:ring-4.focus:ring-gray-200{"data-dropdown-toggle" => "dropdownFilter", type: "button"}
      = icon("fa-solid", "filter", class: "text-gray-400")
      %span.text-gray-500 Filter
      = icon("fa-solid", "chevron-down", class: "text-gray-400 text-sm")
  .h-72.overflow-y-auto.w-full.relative.overscroll-contain
    .hidden{data: {"products--search-parts-target": "loadingTemplate"}}
      = render "loading_template"
    = turbo_frame_tag "search-parts-results", src: search_part_results_operational_portal_parts_path(format: :turbo_stream, product_id: @product.id), loading: :lazy do
      = render "loading_template"
