/ app/views/operational_portal/orders/index.html.erb
.py-5.flex.flex-col.gap-4
  .flex.justify-between.gap-2.items-center
    %h1.font-semibold.text-2xl Orders
    .actions
      = link_to new_operational_portal_order_path, class: "flex gap-3 items-center btn-md bg-[color:var(--primary)] text-[color:var(--primary-text)]" do
        = icon("fa-solid", "plus")
        New Order
  .table-primary
    %table
      %thead
        %tr
          %th ID
          %th Customer Name
          %th Status
          %th.numeric Total Amount
          %th Created Date
          %th Actions
      %tbody
        - if @orders.present?
          - @orders.each do |order|
            %tr.order-row
              %td= link_to "Order ##{order.id}", operational_portal_order_path(order)
              %td= order.customer_name
              %td= order.status
              %td.numeric= order.total_amount
              %td.local-time{"data-time" => "#{order.created_at}"}= order.created_at
              %td
                = link_to 'Edit', edit_operational_portal_order_path(order)
                |
                \#{link_to 'Cancel', operational_portal_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }}
        - else
          %tr
            %td{:colspan => "6"} No orders found
