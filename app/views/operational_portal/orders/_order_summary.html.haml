.border.border-gray-300.rounded.px-4.py-5.min-w-80.bg-white.h-80.max-h-80
  %h1.text-xl.font-medium Order Summary
  .space-y-4.mt-4
    .space-y-2
      .flex.items-center.justify-between.gap-4
        .text-base.font-normal.text-gray-500 Total price
        .text-base.font-medium.text-gray-900
          = number_to_currency(@order.total_amount, unit: "$", precision: 2)
      .flex.items-center.justify-between.gap-4
        .text-base.font-normal.text-gray-500 Discount
        .text-base.font-medium.text-green-600 -$0.00
    .flex.items-center.justify-between.gap-4.border-t.border-gray-200.pt-2
      .text-base.font-bold.text-gray-900 Total
      .text-base.font-bold.text-gray-900
        = number_to_currency(@order.total_amount, unit: "$", precision: 2)
