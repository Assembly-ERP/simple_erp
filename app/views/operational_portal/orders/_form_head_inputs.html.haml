.grid.gap-4{class: @order.new_record? ? "grid-cols-2" : "grid-cols-3"}
  .field.relative
    = form.label :customer_id, "Customer"
    = form.collection_select :customer_id, Customer.all, :id, :name, {prompt: 'Select Customer'}, {required: true, "data-orders--form-target": "customerSelect", "data-action": "change->orders--form#customerChange change->unsaved-changes#formIsChanged"}
  = form.fields_for :order_assignee, form.object.order_assignee.blank? ? OrderAssignee.new : form.object.order_assignee do |os|
    .field
      = os.label :user_id, "Assignee"
      = os.collection_select :user_id, form.object.customer.blank? ? [] : form.object.customer.users, :id, :name, {prompt: 'Select User'}, {"data-orders--form-target": "userAssignee", "data-action": "change->unsaved-changes#formIsChanged", "data-url": users_operational_portal_customer_url(id: ":id"), disabled: form.object.new_record? ? true :false}
  - if @order.new_record?
    = form.hidden_field :order_status_id, value: OrderStatus.operation_default_id
  - else 
    .field
      = form.label :order_status_id, "Status"
      = form.collection_select :order_status_id, OrderStatus.all, :id, :name, {prompt: 'Select Status'}, {required: true, "data-controller": "slim", "data-action": "change->unsaved-changes#formIsChanged"}
