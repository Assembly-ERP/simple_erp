.py-5.flex.flex-col.gap-5
  .grid.gap-3
    .flex.justify-between.gap-2.items-center
      %h1.font-semibold.text-2xl Products
      .actions
        = link_to new_operational_portal_product_path, class: "flex gap-3 items-center btn-md bg-[color:var(--primary)] text-[color:var(--primary-text)]" do
          = icon("fa-solid", "plus")
          New Product
    .table-primary
      %table
        %thead
          %tr
            %th Name
            %th Price
            %th Description
            %th type
            %th Created Date
        %tbody
          - @items.each do |item|
            %tr
              %td= item.name
              %td= number_to_currency(item.price, unit: "$", precision: 2)
              %td= item.description
              %td= item.type
              %td= item.created_at
