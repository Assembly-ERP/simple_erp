/ app/views/operational_portal/settings/index.html.erb
.py-8.flex.flex-col.gap-5
  %h1.font-semibold.text-2xl Settings
  .table-primary
    %table
      %thead
        %tr
          %th Key
          %th Value
          %th Actions
      %tbody
        - @settings.each do |setting|
          %tr
            %td= setting.key
            %td= number_to_currency(setting.value, unit: "$", precision: 2)
            %td= link_to 'Edit', edit_operational_portal_setting_path(setting)
