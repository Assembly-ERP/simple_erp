/ app/views/webhooks/_form.html.erb
= form_for(webhook, remote: true) do |f|
  - if webhook.errors.any?
    #error_explanation
      %h2
        = pluralize(webhook.errors.count, "error")
        prohibited this webhook from being saved:
      %ul
        - webhook.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :customer_id, "Customer"
    = f.collection_select :customer_id, Customer.all, :id, :name, prompt: true
  .actions
    = f.submit
