%header.w-full.bg-white.sticky.top-0.border-b.z-20
  .flex.justify-between.items-center.margin-max-screen.py-5
    .text-3xl.mr-6.font-bold{class: "text-[color:var(--primary)]"}
      Company
    - if user_signed_in?
      .flex.gap-6.items-center.font-medium.mt-1
        = link_to 'Home', root_path
        - if current_user.operational_user?
          = link_to 'Dashboard', operational_root_path
          = link_to 'Orders', operational_portal_orders_path
          = link_to 'Catalog', operational_portal_catalog_path
          .relative{"data-controller" => "nav-dropdown"}
            %button{"data-action" => "nav-dropdown#toggle click@window->nav-dropdown#hide", type: "button"} 
              Manage 
              = icon("fa-solid", "angles-right") 
            .hidden.transition.transform.origin-top-left.absolute.left-0{"data-nav-dropdown-target" => "menu", "data-transition-enter-from" => "opacity-0 scale-95", "data-transition-enter-to" => "opacity-100 scale-100", "data-transition-leave-from" => "opacity-100 scale-100", "data-transition-leave-to" => "opacity-0 scale-95"}
              .bg-white.border.grid.w-52.mt-2.divide-y.shadow
                = link_to 'Support Tickets', operational_portal_support_tickets_path, class: "px-4 py-2 hover:text-[color:var(--primary-text)] hover:bg-[color:var(--primary)] transition-colors duration-100"
                = link_to 'Manage Users', operational_portal_users_path, class: "px-4 py-2 hover:text-[color:var(--primary-text)] hover:bg-[color:var(--primary)] transition-colors duration-100"
                = link_to 'Manage Customers', operational_portal_customers_path, class: "px-4 py-2 hover:text-[color:var(--primary-text)] hover:bg-[color:var(--primary)] transition-colors duration-100"
                = link_to 'Settings', operational_portal_settings_path, class: "px-4 py-2 hover:text-[color:var(--primary-text)] hover:bg-[color:var(--primary)] transition-colors duration-100"
          = link_to 'Profile', operational_portal_profile_path
        - elsif current_user.customer_user?
          = link_to 'Dashboard', customer_root_path
          = link_to 'Orders', customer_portal_orders_path
          = link_to 'Support Tickets', customer_portal_support_tickets_path
          = link_to 'Profile', customer_portal_profile_path
        = link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, id: 'logout-link'
        %button.px-4.border.border-gray-500.gap-3.flex.items-center.py-2.rounded-md.text-gray-500
          = icon("fa-solid", "magnifying-glass", class: "text-lg")
          %span{class: "text-[16px]"} Search Products, Parts, etc..
    - else
      .flex.items-center.gap-5.font-medium.mt-1
        = link_to 'Login', new_user_session_path, class: "text-lg hover:underline hover:decoration-[color:var(--secondary)] decoration-2 underline-offset-4"
        = link_to 'Sign Up', new_user_registration_path, class: "px-7 py-2.5 btn-md text-[color:var(--primary-text)] bg-[color:var(--primary)]"
